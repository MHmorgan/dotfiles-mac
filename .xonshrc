# ------------------------------------------------------------------------------
# ALIASES
#{{{

# NAVIGATION

aliases['..'] = 'cd ..'
aliases['cdl'] = 'cd $arg0 && ll'

#DOC> cl :: Clear the screan and list dir content
aliases['cl'] = 'clear && ls -lh'

#DOC> ch :: Go home and list home content
aliases['ch'] = 'clear && cd && pwd && ls -lh'

#DOC> tmp :: Go to tmp dir
aliases['tmp'] = 'cd /tmp'

#DOC> home :: Go to home dir
aliases['home'] = 'cd && pwd && ls -G'

#DOC> documents :: Go to Documents dir and ls
aliases['documents'] = 'cd ~/Documents && pwd && ls -G'

#DOC> downloads :: Go to Downloads dir and ls
aliases['downloads'] = 'cd ~/Downloads && pwd && ls -G'

#DOC> projects :: Go to Projects dir and ls
aliases['projects'] = 'cd ~/Projects && pwd && ls -G'

aliases['l'] = "ls -F"
aliases['ll'] = "ls -lh"
aliases['l1'] = "ls -1hF"

aliases['path'] = 'echo $PATH | sed "s/:/\\\\n/g" | sort | less'
aliases['aliases'] = 'alias | sort | less'
aliases['lines'] = 'wc -l'

