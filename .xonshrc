# ------------------------------------------------------------------------------
# NAVIGATION
#{{{

#DOC> cl :: Clear the screan and list dir content [NAVIGATION]
aliases['cl'] = 'clear && ls -lh'

#DOC> ch :: Go home and list home content [NAVIGATION]
aliases['ch'] = 'clear && cd && pwd && ls -lh'

#DOC> tmp :: Go to tmp dir [NAVIGATION]
aliases['tmp'] = 'cd /tmp'

#DOC> home :: Go to home dir [NAVIGATION]
aliases['home'] = 'cd && pwd && ls -G'

#DOC> documents :: Go to Documents dir and ls [NAVIGATION]
aliases['documents'] = 'cd ~/Documents && pwd && ls -G'

#DOC> downloads :: Go to Downloads dir and ls [NAVIGATION]
aliases['downloads'] = 'cd ~/Downloads && pwd && ls -G'

#DOC> projects :: Go to Projects dir and ls [NAVIGATION]
aliases['projects'] = 'cd ~/Projects && pwd && ls -G'

#}}}

# ------------------------------------------------------------------------------
# OUTRO

execx($(starship init xonsh))

echo "Remember to run `update`"
fortune | cowsay -n

D = int($(date +%H))
if D < 6:
    echo "Why are you awake at this hour? 🤔"
elif D < 12:
	echo "Good morning! ☀️"
elif D < 18:
	echo "Good evening! 🐉"
else:
	echo "Good night! 🌙"

